{
  "name": "Close Tab",
  "version": "1.0",
  "description": "Closes tabs that have been stashed (looks for the word 'Success')",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "host_permissions": [
	"http://*/*",
	"https://*/*"
	],
  "permissions": [
	"tabs",
	"alarms"
  ],
  "manifest_version": 3
}
